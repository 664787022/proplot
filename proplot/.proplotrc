#-------------------------------------
# ProPlot global settings
#-------------------------------------
rcGlobals:
    # Subplots
    tight:      True
    innertight: True # may mess up aspect ratios for very complex plots
    # Important settings
    # nbsetup:    True
    fontname:  # will be determined by OS in ProPlot
    cycle:     colorblind
    cmap:      sunset
    reso:      lo # for cartopy geographic features, one of {'lo', 'med', 'hi'}
    lut:       256
    color:     k
    margin:    0.0
    grid:      True
    geogrid:   True
    gridminor: False
    hatch:     # hatching on background, useful for indicating invalid data
    facecolor: w # or 0072B2
    small:     8
    large:     9
    linewidth: 0.6
    ticklen:   4.0
    tickpad:   2.0
    tickdir:   out
    # Geography
    land:         False
    ocean:        False
    coast:        False
    rivers:       False
    lakes:        False
    borders:      False
    innerborders: False # e.g. states, provinces
    # Ratios
    gridratio:    0.5 # ratio of major-to-minor grid line widths
    tickratio:    0.8 # ratio of major-to-minor tick width
    ticklenratio: 0.5 # ratio of major-to-minor tick size

#------------------
# rcParams defaults
#------------------
rcParams:
    # Change default
    figure.dpi:              90
    figure.facecolor:        '#f2f2f2'
    figure.max_open_warning: 0
    figure.autolayout:       False
    figure.titleweight:      bold # the super title weight
    savefig.facecolor:       '#ffffff'
    savefig.transparent:     True
    savefig.dpi:             300
    savefig.pad_inches:      0.0
    savefig.directory:
    savefig.bbox:            standard
    savefig.format:          pdf
    axes.xmargin:            0.0
    axes.ymargin:            0.0
    axes.titleweight:        normal
    axes.grid:               True
    axes.labelweight:        normal
    axes.labelpad:           3.0
    axes.titlepad:           3.0
    axes.axisbelow:          lines # for ticks/gridlines *above* patches, *below* lines, use lines
    axes.spines.bottom:      True
    axes.spines.top:         True
    axes.spines.left:        True
    axes.spines.right:       True
    xtick.bottom:            True
    xtick.top:               False
    xtick.minor.visible:     True
    ytick.left:              True
    ytick.right:             False
    ytick.minor.visible:     True
    grid.color:              'k' # also applies to gridminor props, if not set
    grid.alpha:              0.1
    grid.linewidth:          0.6
    grid.linestyle:          '-'
    text.usetex:             False # use TeX for *all* font handling (limits available fonts)
    mathtext.default:        regular # no italics
    mathtext.bf:             'sans:bold'
    mathtext.it:             'sans:it'
    patch.facecolor:         C0
    patch.edgecolor:         k
    patch.linewidth:         1.0
    hatch.color:             k # filled with 'color'
    hatch.linewidth:         0.6 # filled with 'linewidth'
    markers.fillstyle:       full
    scatter.marker:          o
    lines.linewidth:         1.3
    lines.color:             C0
    lines.markeredgewidth:   0
    lines.markersize:        3.0
    lines.dash_joinstyle:    miter
    lines.dash_capstyle:     projecting
    lines.solid_joinstyle:   miter # joinstyle options are miter, round, bevel
    lines.solid_capstyle:    projecting # capstyle options are butt, round, projecting
    legend.fancybox:         False
    legend.frameon:          False
    legend.labelspacing:     0.5
    legend.handletextpad:    0.5
    legend.handlelength:     1.5
    legend.columnspacing:    1
    legend.facecolor:        w
    legend.numpoints:        1
    legend.borderpad:        0.5
    legend.borderaxespad:    0

#----------------------
# rcParams_new defaults
#----------------------
# These are my "fake" rcParams
rcParams_new:
    # Axis settings
    axes.formatter.zerotrim: True
    axes.gridminor: True
    axes.geogrid: True
    axes.hatch:
    axes.alpha: # empty by default; will depend on savefig transparent setting (TODO: check if set_alpha changes savefig result!)
    hatch.alpha: 1
    # Title settings
    # Again, empty ones are filled by the global settings
    abc.fontsize:
    abc.weight:        bold
    abc.color:         k
    abc.pos:           il   # inside the axes, to the left
    abc.format:        a
    abc.border:        True # whether to draw border for interior labels
    abc.linewidth:     1.5  # width of border
    title.pos:         oc   # outside the axes, in the center
    title.border:      True
    title.linewidth:   1.5
    title.color:       k
    title.weight:      normal
    title.fontsize:    # equal to 'large'
    suptitle.color:    k
    suptitle.weight:   bold
    suptitle.fontsize:
    rowlabel.fontsize:
    rowlabel.weight:   bold
    rowlabel.color:    k
    collabel.fontsize:
    collabel.weight:   bold
    collabel.color:    k
    # Parallels and meridians
    geogrid.labels:    True
    geogrid.labelsize: # 'small' font size
    geogrid.lonlines:  30 # default gridline spacing
    geogrid.latlines:  20
    geogrid.latmax:    80 # maximum latitude for gridlines
    geogrid.alpha:     0.4
    geogrid.color:     k
    geogrid.linewidth: 0.6
    geogrid.linestyle: ':'
    # Geography
    land.color:             k
    ocean.color:            w
    lakes.color:            w
    coast.color:            k
    coast.linewidth:        0.6
    borders.color:          k
    borders.linewidth:      0.6
    innerborders.color:     k
    innerborders.linewidth: 0.6
    rivers.color:           k
    rivers.linewidth:       0.6
    # Minor grid lines
    gridminor.alpha:
    gridminor.color:
    gridminor.linestyle:
    gridminor.linewidth:
    # Gridspec
    gridspec.axwidth:    2     # default width
    gridspec.innerpad:   0.05 # padding between main subplots and their panels
    gridspec.outerpad:   0.1   # padding around edges for tight layout
    gridspec.mainpad:    0.15  # padding between primary subplots
    gridspec.titlespace: 0.2   # extra space for title/suptitle
    gridspec.innerspace: 0.2   # just have ticks, no labels
    gridspec.legwidth:   0.25  # default legend space (bottom of figure)
    gridspec.cbarwidth:  0.17  # default colorbar width
    gridspec.ylabspace:  0.7   # default space wherever we expect tick and axis labels (a bit large if axis has no negative numbers/minus sign tick labels)
    gridspec.xlabspace:  0.55  # for horizontal text should have more space
    gridspec.nolabspace: 0.15  # only ticks
    gridspec.panelwidth: 0.45
    gridspec.panelspace: 0.15
    # Inset colorbar, sort of behaves like a legend
    colorbar.extendfull: 0.15 # length of triangle or rectangle "extensions", in inches
    colorbar.extend:     0.08 # same, for "legend" colorbars
    colorbar.length:     0.6  # length of "legend" colorbars
    colorbar.width:      0.12 # width of "legend" colorbars, i.e. colorbar insets
    colorbar.loc:        'lower right'
    colorbar.axespad:    0.5em # padding from axes edge, in font size units just like legend.axespad
    colorbar.xspace:     0.3 # extra space for x label of colorbar

