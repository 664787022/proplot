#------------------------
# ProPlot global settings
#------------------------
# Notebooks
nbsetup:    True
backend:    inline # could also be notebook, but ProPlot discourages interactive figure resizing
autosave:   30
autoreload: 2
# Subplots
abc:   False
tight: True
# Style
fontname:     # if empty, default is Helvetica
cmap:         sunset
lut:          256
cycle:        colorblind
rgbcycle:     False
color:        k
alpha:        1
facecolor:    w
small:        8
large:        9
linewidth:    0.6
margin:       0.0
grid:         True
gridminor:    False
ticklen:      4.0
tickdir:      out
tickpad:      2.0
tickratio:    0.8
ticklenratio: 0.5
gridratio:    0.5
# Geography
reso:         lo
geogrid:      True
land:         False
ocean:        False
coast:        False
rivers:       False
lakes:        False
borders:      False
innerborders: False

#---------------------------------------------------
# rcParams defaults
# See: https://matplotlib.org/users/customizing.html
#---------------------------------------------------
figure.dpi:              90
figure.facecolor:        '#f2f2f2'
figure.autolayout:       False
figure.titleweight:      bold
figure.max_open_warning: 0
savefig.directory:
savefig.dpi:             300
savefig.format:          pdf
savefig.bbox:            standard
savefig.pad_inches:      0.0
savefig.transparent:     True
axes.titleweight:        normal
axes.xmargin:            0.0
axes.ymargin:            0.0
axes.grid:               True
axes.labelpad:           3.0
axes.titlepad:           3.0
grid.color:              'k'
grid.alpha:              0.1
grid.linewidth:          0.6
grid.linestyle:          '-'
hatch.color:             k
hatch.linewidth:         0.6
lines.linewidth:         1.3
lines.markersize:        3.0
legend.frameon:          True
legend.framealpha:       0.8
legend.fancybox:         False
legend.labelspacing:     0.5
legend.handletextpad:    0.5
legend.handlelength:     1.5
legend.columnspacing:    1.0
legend.borderpad:        0.5
legend.borderaxespad:    0
xtick.minor.visible:     True
ytick.minor.visible:     True
mathtext.bf:             'sans:bold'
mathtext.it:             'sans:it'
mathtext.default:        regular

#----------------------
# rcCustom defaults
#----------------------
# Extra label settings
abc.loc:           l # outside the axes, to the left
title.loc:         c # outside the axes, in the center
abc.format:        a
abc.fontsize:      # filled by 'large'
abc.color:         k
abc.weight:        bold
abc.border:        True
abc.linewidth:     1.5 
title.fontsize:    # filled by 'large'
title.color:       k
title.weight:      normal
title.border:      True
title.linewidth:   1.5
suptitle.fontsize: # filled by 'large'
suptitle.color:    k
suptitle.weight:   bold
rowlabel.fontsize: # filled by 'large'
rowlabel.weight:   bold
rowlabel.color:    k
collabel.fontsize: # filled by 'large'
collabel.weight:   bold
collabel.color:    k
tick.labelsize:    # filled by 'small'
tick.labelcolor:   # filled by 'color'
tick.labelweight:  normal
# Extra axes settings
axes.alpha: # if empty, depends on 'savefig.transparent' setting
axes.formatter.zerotrim: True
axes.formatter.timerotation: 30
axes.gridminor: True
axes.geogrid: True
# Extra image settings
image.edgefix: True
image.levels: 11
# Colorbar settings
colorbar.grid:        False
colorbar.frameon:     True
colorbar.framealpha:  0.8
colorbar.extendinset: 0.08
colorbar.extend:      0.15
colorbar.length:      0.6
colorbar.width:       0.12
colorbar.loc:         'lower right'
colorbar.axespad:     0.5em
colorbar.xspace:      0.3
# Minor tick gridlines
gridminor.alpha: # if empty, inherited from "grid"
gridminor.color: # if empty, inherited from "grid"
gridminor.linestyle: # if empty, inherited from "grid"
gridminor.linewidth: # filled by "grid.linewidth" x "gridratio"
# Parallels and meridians
geogrid.labels:    False
geogrid.labelsize: # filled by "small"
geogrid.latmax:    80
geogrid.lonstep:   30
geogrid.latstep:   20
geogrid.alpha:     0.5
geogrid.color:     k
geogrid.linewidth: 1.0
geogrid.linestyle: ':'
# Geographic content
map.linewidth: # filled by "linewidth"
map.facecolor: # filled by "facecolor"
map.edgecolor: # filled by "color"
land.color:             k
ocean.color:            w
lakes.color:            w
coast.color:            k
coast.linewidth:        0.6
borders.color:          k
borders.linewidth:      0.6
innerborders.color:     k
innerborders.linewidth: 0.6
rivers.color:           k
rivers.linewidth:       0.6
# Subplot property sizes
subplot.axwidth:    2
subplot.panelwidth: 0.45
subplot.cbarwidth:  0.17
subplot.legwidth:   0.25
# Tight layout padding, affect the figure when tight=True
subplot.panelpad:   0.05
subplot.borderpad:  0.10
subplot.subplotpad: 0.10
# Spaces, affect the figure when tight=False
subplot.titlespace: 0.2
subplot.innerspace: 0.1
subplot.ylabspace:  0.6
subplot.xlabspace:  0.45
subplot.nolabspace: 0.15
subplot.panelspace: 0.15
